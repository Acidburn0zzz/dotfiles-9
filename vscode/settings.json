{
  "editor.fontSize": 12,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "editor.fontFamily": "'Fira Mono', Menlo, Monaco, 'Courier New', monospace",
  "window.title": "${activeEditorLong}",
  "git.autofetch": true,
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "Argon â€” Noble Theme",
  // open JSON editor instead of visual picker
  "workbench.settings.editor": "json",
  "editor.formatOnSave": true,
  // disable validate because of TSLint and ESLint collision
  "javascript.validate.enable": false,
  "prettier.eslintIntegration": true,
  // reduce visual noise in the left sidebar
  "workbench.activityBar.visible": false,
  "gitlens.codeLens.enabled": false
}
